<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title(page_title: yield(:title)) %></title>
    <%= render 'layouts/head' %>
  </head>
  <body>
    <div class='main-wrapper'>
      <%= render 'layouts/header' %>
      <%= yield %>
      <%= render 'layouts/footer' %>

      <!-- modals -->
      <%= render 'layouts/login_modal' %>
      <%= render 'layouts/signup_modal' %>
    </div>
    <%= javascript_include_tag 'application' %>
  </body>
</html>

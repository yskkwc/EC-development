<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title(yield(:title)) %></title>
    <%= render 'layouts/head' %>
  </head>
  <body>
    <div class='main-wrapper'>
      <%= render 'layouts/header' %>
      <%= yield %>
      <%= render 'layouts/footer' %>

      <!-- modals -->
      <%= render 'layouts/login-modal' %>
      <%= render 'layouts/signup-modal' %>
    </div>
    <%= javascript_include_tag 'application' %>
  </body>
</html>
